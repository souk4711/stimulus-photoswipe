{
  "compilerOptions": {
    "lib": ["dom", "es2015", "scripthost"],
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": ".",
    "noEmit": false,
    "declaration": false,
    "skipLibCheck": true,
    "paths": {
      "photoswipe/lightbox": [
        "./node_modules/photoswipe/dist/types/lightbox/lightbox.d.ts"
      ]
    }
  },
  "include": ["src/**/*.ts"]
}
